---
import MainPage from "../components/MainPage.astro";
import MainPageHeadline from "../components/MainPageHeadline.astro";
import "../styles/global.css";

import { Picture } from "astro:assets";
import masterOfTheRingImageWide from "../assets/master-of-ring-wide.jpg";
import LinkComponent from "../components/LinkComponent.astro";
---

<MainPage>
  <MainPageHeadline>
    Ragin’ Diarrhea – Manege frei für das große Comeback! 🎪🔥
  </MainPageHeadline>

  <h2 class="text-2xl mb-2">Veröffentlichung des neuen Albums!</h2>
  <div class="mb-2">
    <Picture
      formats={["avif", "webp", "png"]}
      widths={[400, 800, 1200]}
      src={masterOfTheRingImageWide}
      alt="Master of the Ring cover photo. Shows several circus workers and a lion in a tophat"
    />
  </div>
  <p class="text-xl">
    Hören Sie noch heute zu und laden Sie es bei <LinkComponent
      href="https://ragindiarrhea.bandcamp.com/album/master-of-the-ring-2"
      isExternal>Bandcamp</LinkComponent
    > herunter!
  </p>
</MainPage>
